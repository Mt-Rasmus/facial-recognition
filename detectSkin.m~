function [ facemask ] = detectSkin( input )
% 

height = size(output,1);
width = size(output,2);

%Initialize the output images
out = output;
bin = zeros(height,width);

%Convert the image from RGB to YCbCr
img_ycbcr = rgb2ycbcr(out);
Cb = img_ycbcr(:,:,2);
Cr = img_ycbcr(:,:,3);

%Detect Skin
[r,c,v] = find(Cb>=77 & Cb<=127 & Cr>=133 & Cr<=173);
numind = size(r,1);

%Mark Skin Pixels
for i=1:numind
    bin(r(i),c(i)) = 1;
end


end

